<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="school.management"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name="com.android.tools.fd.runtime.BootstrapApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="school.management.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="school.management.About"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="school.management.Splashpage"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="school.management.Student"
            android:label="@string/title_activity_student" >
        </activity>
        <activity
            android:name="school.management.View"
            android:label="@string/title_activity_view" >
        </activity>
        <activity
            android:name="school.management.ViewActivity"
            android:label="@string/title_activity_view" >
        </activity>
        <activity
            android:name="school.management.Test"
            android:label="@string/title_activity_test" >
        </activity>
        <activity
            android:name="school.management.Update"
            android:label="@string/title_activity_update" >
        </activity>
        <activity
            android:name="school.management.Delete"
            android:label="@string/title_activity_delete" >
        </activity>
    </application>

</manifest>